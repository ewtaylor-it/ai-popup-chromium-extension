{
    "manifest_version": 3,
    "name": "VicGov AI Pop-Up Extension",
    "version": "1.0.1",
    "description": "Displays a pop-up warning to users when they visit AI websites, to inform them of the privacy risks associated with AI.",
    "permissions": [
        "webNavigation",
        "tabs",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "images/icon128-black.png",
                "images/icon48-black.png",
                "images/icon16-black.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "images/icon16-black.png",
        "48": "images/icon48-black.png",
        "128": "images/icon128-black.png"
    }
}